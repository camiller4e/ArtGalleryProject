<h2>Artworks</h2>

<div class="artworks">

<% for artwork in @artworks %>
<figure>
  <figcaption>
    <img src=" <%= artwork.image() %>">
    Title: <%= artwork.title() %> <br>
    Year: <%= artwork.year() %> <br>
    Category: <%= artwork.category() %> <br>
    Artist: <%= artwork.artist_id() %> <br>
  </figcaption>
  <a href="/artworks/<%= artwork.id %>">Show Artwork</a>
</figure>
<% end %>

</div>
